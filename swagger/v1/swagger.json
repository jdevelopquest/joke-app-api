{
  "openapi": "3.1.0",
  "info": {
    "title": "Jokes API",
    "description": "API for managing and retrieving jokes",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/v1/jokes"
    }
  ],
  "paths": {
    "/create": {
      "post": {
        "summary": "Create a new joke",
        "tags": [
          "Jokes"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "premise": {
                    "type": "string",
                    "description": "Joke setup"
                  },
                  "punchline": {
                    "type": "string",
                    "description": "Joke punchline"
                  }
                },
                "required": true
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Joke created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessMessage"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request body, joke premise and punchline are required and must be strings",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          },
          "500": {
            "description": "Error creating joke",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          }
        }
      }
    },
    "/index": {
      "get": {
        "summary": "Get all jokes",
        "tags": [
          "Jokes"
        ],
        "responses": {
          "200": {
            "description": "List of all jokes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Joke"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error retrieving jokes",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          }
        }
      }
    },
    "/show/{id}": {
      "get": {
        "summary": "Get a specific joke by ID",
        "tags": [
          "Jokes"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Joke ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Joke found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Joke"
                }
              }
            }
          },
          "400": {
            "description": "Joke ID is required and must be a number",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          },
          "404": {
            "description": "Joke not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          },
          "500": {
            "description": "Error retrieving joke",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          }
        }
      }
    },
    "/random": {
      "get": {
        "summary": "Get a random joke",
        "tags": [
          "Jokes"
        ],
        "responses": {
          "200": {
            "description": "Random joke retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Joke"
                }
              }
            }
          },
          "500": {
            "description": "Error retrieving random joke",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Joke": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Joke ID"
          },
          "premise": {
            "type": "string",
            "description": "Joke setup"
          },
          "punchline": {
            "type": "string",
            "description": "Joke punchline"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp"
          }
        }
      },
      "SuccessMessage": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Joke created successfully"
          }
        }
      },
      "ErrorMessage": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Error message"
          }
        }
      }
    }
  }
}
